<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    
    
    <Grid Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:FinalTitlePage x:Name="TitlePageControl"/>
        <local:FinalStatsCustomizationPage x:Name="StatsCustomControl" Visibility="Hidden"/>
        <local:FinalRaceCustomization x:Name="RaceControl" Visibility="Hidden"/>
        <local:FinalPlayerCreation x:Name="PlayerCreationControl" Visibility="Hidden"/>
        <local:FinalItemsCustomization x:Name="ItemCustomizationControl" Visibility="Hidden"/>
        <local:FinalGameCreation x:Name="GameCreationControl" Visibility="Hidden"/>
        <local:FinalClassCustomization x:Name="ClassCustomizationControl" Visibility="Hidden"/>
        <local:FinalAllCharacterButtons x:Name="CharacterCreationControl" Visibility="Hidden"/>


    </Grid>
</Window>
